<h2>My Profile</h2>
<div class="row mt-5">
<div class="col-sm-12">
  <h5>Your available services:</h5>
  <ul>
    <% @user.services.each do |service| %>
      <li style="
    padding-bottom: 5px;"><%= service.name%> - <%= service.price%>€ - <%= link_to 'Edit Service', edit_service_path(service), class: 'btn btn-dark rounded-pill' %>   <%= link_to 'Delete', delete_service_path(service), class: 'btn btn-dark rounded-pill', method: :delete, data: { confirm: "Are you sure?" } %></li>
    <% end %>
  </ul>
  <br>
  <hr>
  </div>
  </div>
<div class="row mt-5 mb-5">
<div class="col-md-6">
  <br>
  <h5>Create a service</h5>
  <%= simple_form_for @service do |f| %>
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.submit "Submit", class: "btn btn-dark rounded-pill" %>
  <% end %>
<br>
  <hr>
  <br>
  <h5>Upload new artwork</h5>
  <%= simple_form_for(@artwork) do |f| %>
    <%= f.input :photo, as: :file %>
    <%= f.input :title %>
    <%= f.input :category %>
    <%= f.submit "Submit", class: "btn btn-dark rounded-pill" %>
  <% end %>
   <br>
  <hr>
</div>

<div class="col-md-6">
  <br>

  <h5>Your open orders</h5>
  <% @user.commissions.each do |comm|%>
    <div class="notification">
      <h5><%= comm.art_price %>€</h5>
      <div class="notification-content">
        <p><small>14th January</small></p>
        <p><%= comm.art_description %></p>
      </div>
      <div class="notification-actions">
        <a href="#">Edit <i class="fas fa-pencil-alt"></i></a>
        <a href="#">Delete <i class="far fa-trash-alt"></i></a>
      </div>
    </div>
  <% end %>
</div>



</div>
